/* 搜索 */
.search-view {
	display: flex;
	flex-direction: row;
	border: 1rpx solid #f7f7f7;
	margin: 0 20rpx;
	border-radius: 20rpx;
	padding: 0 20rpx;
	justify-content: space-between;
	align-items: center;
}
.search-img {
	width: 50rpx;
	height: 50rpx;
}
.input-cell {
	padding: 20rpx 20rpx;
	width: 600rpx;
}

/* 轮播图 */
.swiper-view {
	height: 400rpx;
	padding: 20rpx 20rpx;
	border: 1rpx solid #f7f7f7;
}
.swiper-wrap {
	height: 100%;
}
.swiper-items {
	height: 100%;
}
.swiper-img-box {
	height: 100%;
	display: flex;
	align-items: center;
}
.swiper-img {
	height: 100%;
	border-radius: 20rpx;
	border-color: #ff0000;
}